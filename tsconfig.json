{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@components/*": ["./components/*"],
      "@context/*": ["./context/*"],
      "@styles/*": ["./styles/*"],
      "@img/*": ["./assets/img/*"],
      "@myTypes/*": ["./myTypes/*"],
      "@pages/*": ["./pages/*"],
      "@RecipesCardsPage/*": ["./pages/RecipesCardsPage"],
      "@DetailRecipePage/*": ["./pages/DetailRecipePage"],
      "@utils/*": ["./utils/*"],
      "@store/*": ["./store/*"]
    },
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],

}
